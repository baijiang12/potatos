/* pages/tools/tools-game-today/tools-game-today.wxss */

.match-top {
  width: 100%;
  height: 76rpx;
  font-size: 28rpx;
  color: #8a8a8a;
  text-align: center;
}

.title {
  background: #fff;
  margin: 5rpx;
  font-size: 19px;
}

.follow {
  position: fixed;
}

.follows {
  border: 1px solid #cfcecf;
}

.fol-img {
  width: 80rpx;
  height: 80rpx;
}

.tip {
  padding-top: 9px;
}

.date {
  font-size: 33rpx;
  font-weight: 700;
  color: #4b556c;
}

.horizon {
  width: 40%;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 22rpx;
  margin: 0 auto;
  z-index: -99;
}

.day {
  /* background-color: #f2f2f2; */
  display: flex;
  flex-direction: row;
}

.tools-game-today-container {
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
  margin-bottom: 60rpx;
}

image {
  width: 100rpx;
  height: 100rpx;
}

.team-view {
  display: flex;
  flex-direction: column;
  width: 175rpx;
  align-items: center;
  margin-right: 50rpx;
}

.team2-view {
  display: flex;
  flex-direction: column;
  width: 175rpx;
  align-items: center;
  /* margin-right: 40rpx; *//* border-radius: 5rpx; *//* border: 1px solid; */
}

.text-middle-view {
  display: flex;
  flex-direction: column;
  width: 300rpx;
  align-items: center;
  margin-right: 35rpx;
  /* margin: 0 0 0 70rpx; */
}

.middle-ribbon {
  /* border: 1px solid;  */
  width: 750rpx;
  height: 35rpx;
  background: #eee;
}

.match-list-status {
  margin-top: 5rpx;
  display: flex;
  flex-direction: row;
  color: #888;
  font-size: 30rpx;
}

.match-name {
  float: left;
  margin-right: 20rpx;
}

.match-status {
  float: right;
  background-color: #f2f2f2;
  border-radius: 8px;
  width: 110rpx;
  text-align: center;
}

.match-status-1 {
  float: right;
  background-color: #f2f2f2;
  border-radius: 8px;
  width: 110rpx;
  text-align: center;
  color: #000;
  font-weight: 700;
}

.match-info {
  display: flex;
  flex-direction: row;
}

.match-date {
  margin-left: 5rpx;
  color: #888;
  font-size: 35rpx;
}

.match-area {
  margin: 5rpx 0 0 30rpx;
  color: #888;
  font-size: 34rpx;
}

.vs {
  color: #888;
  font-size: 65rpx;
  margin-right: 50rpx;
}

.vs1 {
  color: #888;
  font-size: 65rpx;
  margin-left: 20rpx;
}

.team-name {
  font-size: 37rpx;
  color: #4b556c;
  font-weight: 700;
}

.maohao {
  font-size: 55rpx;
  padding-right: 10rpx;
}
