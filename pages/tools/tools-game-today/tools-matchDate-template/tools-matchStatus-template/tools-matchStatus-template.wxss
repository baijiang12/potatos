}

.match-name {
  float: left;
  margin-right: 20rpx;
}

.match-status {
  float: right;
  background-color: #f2f2f2;
  border-radius: 8px;
  width: 110rpx;
  text-align: center;
}

.match-status-1 {
  float: right;
  background-color: #f2f2f2;
  border-radius: 8px;
  width: 110rpx;
  text-align: center;
  color: #000;
  font-weight: 700;
}

.match-info {
  display: flex;
  flex-direction: row;
}

.match-date {
  margin-left: 5rpx;
