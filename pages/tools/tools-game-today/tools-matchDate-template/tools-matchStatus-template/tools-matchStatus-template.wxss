.tools-game-today-container {
  display: flex;
  flex-direction: row;
  margin-top: 15rpx;
  margin-bottom: 33rpx;
}
.text-middle-view {
  display: flex;
  flex-direction: column;
  width: 300rpx;
  align-items: center;
  margin-right: 35rpx;
