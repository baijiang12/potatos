.username {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.user-data {
  margin: 34rpx 0 0 20rpx;
}

.commnd-list {
  font-size: 35rpx;
  font-weight: 700;
  margin-top: 80rpx;
  margin-left: 25rpx;
  vertical-align: middle;
  color: #4b556c;
}

.comment-date {
  float: right;
  font-size: 30rpx;
  font-weight: 300;
  margin-top: 20rpx;
  margin-right: 30rpx;
  vertical-align: middle;
  color: #666;
}

.comment-content {
  font-size: 30rpx;
  font-weight: 300;
  vertical-align: middle;
  color: #666;
  padding: 20rpx;
  line-height: 55rpx;
}

.love {
  /* margin-left: 580rpx; */
  padding: 10rpx;
}

.love-img {
  width: 40rpx;
  height: 40rpx;
  margin-left: 600rpx;
}

.love-num {
  margin-top: 4rpx;
  margin-right: 30rpx;
  float: right;
  font-size: 30rpx;
  font-weight: 300;
