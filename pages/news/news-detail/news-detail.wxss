.detail-container {
  display: flex;
  flex-direction: column;
}

.head-image {
  margin: 20rpx;
  width: 95%;
  height: 460rpx;
  border-radius: 25px;
  box-shadow: 2px 0px 6px 0.1px #aaa;
}

.author-date {
  flex-direction: row;
  margin-left: 30rpx;
  margin-bottom: 20rpx;
}

.avatar {
  height: 75rpx;
  width: 75rpx;
  vertical-align: middle;
}

.author {
  font-size: 30rpx;
  font-weight: 300;
  margin-left: 20rpx;
  vertical-align: middle;
  color: #666;
}

.const-text {
  font-size: 24rpx;
  color: #999;
  margin-left: 20rpx;
}

.date {
  font-size: 24rpx;
  margin-left: 30rpx;
  vertical-align: middle;
  color: #999;
}

.title {
  margin: 25rpx 10rpx 5rpx 30rpx;
  /* margin-left: 40rpx; *//* font-size: 36rpx; */
  font-weight: 700;
  /* margin-top: 30rpx; */
  letter-spacing: 2px;
  color: #4b556c;
}

.horizon {
  width: 660rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 46rpx;
  margin: 0 auto;
  z-index: -99;
}

.horizon2 {
  width: 704rpx;
  height: 1px;
  background-color: #e5e5e5;
  vertical-align: middle;
  position: relative;
  top: 19rpx;
  margin: 0 auto;
  z-index: -99;
}

.detail {
  color: #666;
  margin-left: 30rpx;
  margin-top: 97rpx;
  margin-right: 30rpx;
  line-height: 44rpx;
  letter-spacing: 2px;
}

.comment {
  display: flex;
  flex-direction: column;
  margin: 5rpx;
}

.user-img {
  height: 75rpx;
  width: 75rpx;
  vertical-align: middle;
}

